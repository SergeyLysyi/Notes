<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="sergeylysyi.threescreens">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Three Note Screens"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="sergeylysyi.threescreens.MainActivity"
            android:label="Your Notes Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="sergeylysyi.threescreens.EditActivity"
            android:label="Note Content Screen">
        </activity>
        <activity
            android:name="sergeylysyi.threescreens.ScrollPalette"
            android:label="Note Color Screen"/>
    </application>

</manifest>